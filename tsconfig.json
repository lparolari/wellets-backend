{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["src/@types", "node_modules/@types", "./src/@types", "./@types"],
    "baseUrl": "./src"
  }
}

{
  "name": "wellets-backend",
  "version": "1.3.0",
  "author": {
    "email": "me@ondaniel.com.br",
    "name": "Daniel Oliveira",
    "url": "https://homepages.dcc.ufmg.br/~oliveiradaniel/"
  },
  "description": "Manage your money placed in different portfolios.",
  "homepage": "https://wellets.ondaniel.com.br/",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/stemDaniel/wellets-backend/",
    "type": "git"
  },
  "private": true,
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --ignore node_modules ./src/Shared/Infra/Http/index.ts",
    "start": "yarn pm2 start ecosystem.config.js --env production --attach",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm-seeding": "ts-node-dev -r tsconfig-paths/register ./node_modules/@jorgebodega/typeorm-seeding/dist/cli.js",
    "create-migration": "yarn typeorm migration:create -n",
    "run-migrations": "yarn typeorm migration:run",
    "revert-last-migration": "yarn typeorm migration:revert",
    "seed:config": "yarn typeorm-seeding config",
    "seed:run": "yarn typeorm-seeding seed",
    "test": "jest --runInBand",
    "test:watch": "yarn test --watchAll",
    "test:coverage": "yarn test --coverage",
    "gen:ormconfig": "node genOrmconfig.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.9",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node-cron": "^2.0.3",
    "@types/ramda": "^0.28.1",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "jest": "^27.5.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@jorgebodega/typeorm-seeding": "^3.1.0",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^13.0.4",
    "class-transformer": "^0.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "ioredis": "^4.19.4",
    "jsonwebtoken": "^8.5.1",
    "node-cron": "^2.0.3",
    "pg": "^8.5.1",
    "pm2": "^5.2.0",
    "ramda": "^0.28.0",
    "rate-limiter-flexible": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.1.8",
    "tsyringe": "^4.4.0",
    "typeorm": "^0.2.41"
  }
}
